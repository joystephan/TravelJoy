# Production Environment Variables
# Copy this file to .env.production and update with production values

# Database (Production PostgreSQL)
DATABASE_URL="postgresql://user:password@production-db-host:5432/traveljoy?schema=public&sslmode=require"

# Redis (Production)
REDIS_HOST="production-redis-host"
REDIS_PORT=6379
REDIS_PASSWORD="your-redis-password"
REDIS_TLS=true

# JWT (Use strong secret in production!)
JWT_SECRET="generate-a-strong-random-secret-key-here-min-32-chars"
JWT_EXPIRES_IN="7d"

# Stripe (Production Keys)
STRIPE_SECRET_KEY="sk_live_your_production_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_production_webhook_secret"
STRIPE_BASIC_PRICE_ID="price_production_basic_plan_id"
STRIPE_PREMIUM_PRICE_ID="price_production_premium_plan_id"

# External APIs
OPENWEATHER_API_KEY="your_production_openweather_api_key"

# AI Configuration
AI_PROVIDER="ollama"
OLLAMA_URL="http://your-ollama-server:11434"
AI_MODEL="llama2"
HUGGINGFACE_API_KEY=""

# Server
PORT=3000
NODE_ENV="production"

# CORS (Update with your production frontend URL)
CORS_ORIGIN="https://traveljoy.com,https://www.traveljoy.com"

# Logging
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Note: Never commit this file with real values to version control!
